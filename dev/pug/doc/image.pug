extends layout.pug

block content
	h1 Работа с изображениями

	h2 Слайдер swiper

	section
		.swiper.l-swiper
			.swiper-wrapper
				.swiper-slide: img(src="http://placeimg.com/1000/340/any/grayscale", alt="")
				.swiper-slide: img(src="http://placeimg.com/1000/340/nature/sepia", alt="")
				.swiper-slide: img(src="http://placeimg.com/1000/340/tech", alt="")
			.swiper-pagination
			.swiper-button-prev
			.swiper-button-next
			.swiper-scrollbar

	h2 Вставка изображения из svg спрайта (inline или url)
	p
		+svg('', 'iconsvg-js')(width="100" height="100" fill="#f9cc46")
		| svg(width="100", height="100", fill="#f9cc46")
	p
		+svg('', 'iconsvg-css3')(style="width:50px;height:50px;fill:#379BD6;")
		| svg(style="width:50px;height:50px;fill:#379BD6;")
	style
		| .svgimg {width:50px;height:50px;fill:#E44D25;}
	p
		+svg('', 'iconsvg-html')(class="svgimg")
		| svg(class="svgimg")
